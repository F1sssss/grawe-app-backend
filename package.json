  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=development nodemon --legacy-watch --ignore logs/ --ignore node_modules/ server.js",
    "start:win": "set NODE_ENV=development&& nodemon --legacy-watch --ignore logs/ --ignore node_modules/ server.js",
